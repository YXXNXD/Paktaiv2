<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".GuideProfileActivity">

    <TextView
        android:id="@+id/about"
        android:layout_width="358dp"
        android:layout_height="157dp"
        android:layout_marginTop="8dp"
        android:text="ชื่อ สมชาย อินทราพร อายุ 23 ปี มีรถ 4 ที่นั่ง เป็นคนจังหวัดชุมพรรู้จักทุกซอกทุกมุมของที่นี่เป็นอย่างดีผมรักในการผจญภัยและพาคนมาเปิดประสบการณ์ใหม่ๆในสถานที่ ธรรมชาติที่สวยงามและเงียบสงบของจังหวัดนี้ไม่ว่าจะเป็นการดำน้ำดูปะการังเที่ยวชมเกาะหรือสัมผัสวิถีชีวิตของชาวบ้านผมพร้อมที่จะพาทุกคนไปพบกับความสวยงามที่ซ่อนอยู่ของชุมพรมาร่วมเดินทางไปกับผมเพื่อสัมผัสประสบการณ์ท่องเที่ยวที่ไม่ เหมือนใครครับ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/languages" />

    <TextView
        android:id="@+id/general_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General information"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="231dp" />

    <TextView
        android:id="@+id/languages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="languages\nthailand, english"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/general_info" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="38dp"
        android:layout_height="19dp"
        android:text="about"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="296dp" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/profile_image_desc"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="somchaixx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="658dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="27dp"
        android:layout_height="26dp"
        app:srcCompat="@drawable/line"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="654dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="351dp"
        android:layout_height="142dp"
        app:srcCompat="@drawable/guide"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="506dp" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="สมชาย อินทราพร"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="profile verified"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="201dp" />

    <TextView
        android:id="@+id/profile_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⭐ 5 * 20 reviews"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="179dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="24dp"
        android:layout_height="19dp"
        app:srcCompat="@drawable/tick"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="201dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="24dp"
        android:layout_height="19dp"
        app:srcCompat="@drawable/edit_text"
        tools:layout_editor_absoluteX="350dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="24dp"
        android:layout_height="19dp"
        app:srcCompat="@drawable/ic_back_arrow"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="13dp" />

    <ImageView
        android:id="@+id/license_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/license_image_desc"
        app:layout_constraintTop_toBottomOf="@id/about"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/license_placeholder" />
    <View
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guide Profile"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="บัตรมัคคุเทศก์"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="475dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
